# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o
OPENAI_MAX_TOKENS=2000

# ElevenLabs Configuration
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
ELEVENLABS_VOICE_ID=21m00Tcm4TlvDq8ikWAM  # Default voice ID
ELEVENLABS_MODEL=eleven_monolingual_v1

# Speech-to-Text Configuration
# Choose between: "whisper_api", "deepgram", "whisper_local"
STT_PROVIDER=whisper_api
DEEPGRAM_API_KEY=your_deepgram_api_key_here

# Lip-Sync Configuration
# Choose between: "d_id", "replicate", "colab", "runwayml"
LIP_SYNC_PROVIDER=d_id
D_ID_API_KEY=your_d_id_api_key_here
REPLICATE_API_TOKEN=your_replicate_token_here

# Security Configuration
SECRET_KEY=your_secret_key_here_32_chars_minimum
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database Configuration (for session management)
DATABASE_URL=sqlite:///./vbva.db

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=false

# CORS Configuration
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:8501", "http://localhost:8502"]

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# File Storage
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760  # 10MB in bytes

# Cache Configuration
CACHE_TTL=3600  # 1 hour in seconds
REDIS_URL=redis://localhost:6380  # Updated port for Redis

# Avatar Configuration
AVATAR_DIR=./avatars
DEFAULT_AVATAR=./avatars/general.jpg 